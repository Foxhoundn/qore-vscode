{
    "name": "qore-vscode",
    "displayName": "Qore",
    "description": "Qore language support for VS Code",
    "version": "0.3.0",
    "publisher": "qoretechnologies",
    "author": {
        "name": "Ond≈ôej Musil",
        "email": "ondrej.musil@qoretechnologies.com"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "homepage": "https://github.com/qorelanguage/qore-vscode",
    "repository": {
        "type": "git",
        "url": "https://github.com/qorelanguage/qore-vscode"
    },
    "bugs": {
        "url": "https://github.com/qorelanguage/qore-vscode/issues"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Other",
        "Snippets"
    ],
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#333333",
        "theme": "dark"
    },
    "keywords": [
        "qore",
        "language",
        "programming",
        "programminglanguage",
        "languageserver"
    ],
    "activationEvents": [
        "onLanguage:qore"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "qore",
                "aliases": [
                    "Qore",
                    "qore"
                ],
                "extensions": [
                    ".q",
                    ".qm",
                    ".qtest",
                    ".ql",
                    ".qc",
                    ".qsd",
                    ".qfd",
                    ".qwf",
                    ".qjob",
                    ".qclass",
                    ".qconst",
                    ".qsm"
                ],
                "firstLine": "^((#.*mode:[ ]*qore)|(#!/usr/bin/env qore))",
                "configuration": "./qore.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "qore",
                "scopeName": "source.qore",
                "path": "./syntaxes/qore.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "qore",
                "path": "./snippets/qore.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Qore configuration",
            "properties": {
                "qore.executable": {
                    "type": "string",
                    "description": "Path to the Qore language interpreter (inluding the binary). Keep it empty to use system PATH one.",
                    "default": null,
                    "scope": "window"
                },
                "qore.useQLS": {
                    "type": "boolean",
                    "default": true,
                    "scope": "window",
                    "description": "Whether to use QLS for providing Qore code information."
                },
                "qore.logging": {
                    "type": "boolean",
                    "default": false,
                    "scope": "window",
                    "description": "Whether to log QLS operations."
                },
                "qore.logFile": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "scope": "window",
                    "description": "Specifies QLS log file path. If logging is turned on, all the operations will be logged to this file."
                },
                "qore.logVerbosity": {
                    "type": "number",
                    "default": 0,
                    "scope": "window",
                    "description": "Verbosity of QLS logging. From 0 to 2."
                },
                "qore.appendToLog": {
                    "type": "boolean",
                    "default": false,
                    "scope": "window",
                    "description": "Append to QLS log file instead of overwriting it on each restart."
                }
            }
        },
        "configurationDefaults": {
            "[qore]": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.quickSuggestions": true
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.43",
        "@types/node": "^7.0.71",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "vscode-languageclient": "^5.1.1"
    }
}
